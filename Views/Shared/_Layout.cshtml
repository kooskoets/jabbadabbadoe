@{
    var siteName = "Jabbadabbadoe";
}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
@await RenderSectionAsync("Scripts", required: false)
<body>
    <nav class="navbar navbar-expand-lg bg-light border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Jabbadabbadoe</a>
            <div class="collapse navbar-collapse show" id="navb">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Overzicht</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Bookings" asp-action="Create">Reserveren</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ical/space.ics">Kalender (.ics)</a></li>
                </ul>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary" href="/Identity/Account/Login">Login</a>
                    <a class="btn btn-secondary" href="/Identity/Account/Register">Registreren</a>
                    <a class="btn btn-outline-secondary" href="/Bookings/AdminList">Admin</a>
                </div>
            </div>
        </div>
    </nav>
    <main class="container mb-5">
        @RenderBody()
    </main>
    <footer class="border-top py-3">
        <div class="container text-muted small">
            © @DateTime.Now.Year Jabbadabbadoe · jabbadabbadoe.nl
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>