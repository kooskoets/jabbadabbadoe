@*
  Robust layout with explicit absolute paths and a console check.
  Uses CDN for Bootstrap AND a local site.css so you can see styling even if CDN fails.
*@
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Jabbadabbadoe</title>

    <!-- Local styles always load -->
    <link rel="stylesheet" href="/css/site.css" />

    <!-- Bootstrap via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header class="border-bottom py-3 mb-3 bg-light">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand fw-semibold text-decoration-none" href="/">Jabbadabbadoe</a>
            <nav class="d-flex gap-3">
                <a href="/" class="link-secondary text-decoration-none">Overzicht</a>
                <a href="/Bookings/Create" class="btn btn-primary btn-sm">Reserveren</a>
                <a href="/Home/CalendarIcs" class="link-secondary text-decoration-none">Kalender (.ics)</a>
                <a class="link-secondary text-decoration-none" href="/Identity/Account/Login">Login</a>
            </nav>
        </div>
    </header>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="border-top py-4">
        <div class="container text-muted small">
            © @DateTime.Now.Year Jabbadabbadoe
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script>
        console.log('Layout loaded.');
        // Show if CDN failed
        window.addEventListener('load', () => {
            const hasBootstrap = !!window.bootstrap || document.querySelector('.btn.btn-primary');
            console.log('Bootstrap detected:', hasBootstrap);
            if (!hasBootstrap) {
                const warn = document.createElement('div');
                warn.className = 'container alert alert-warning mt-3';
                warn.innerText = 'Let op: Bootstrap werd niet geladen (CSP/Netwerk?). Site.css is wel actief.';
                document.body.prepend(warn);
            }
        });

        // Fallback voor kapotte afbeeldingen → toon placeholder
        document.addEventListener('error', function (e) {
            const t = e.target;
            if (t && t.tagName === 'IMG' && !t.dataset.fallbackApplied) {
                t.dataset.fallbackApplied = '1';
                t.src = '/images/placeholder.png';
            }
        }, true);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
