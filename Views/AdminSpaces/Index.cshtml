@model IEnumerable<JabbadabbadoeBooking.Models.Space>
<h1>Appartementen</h1>
<p><a asp-action="Create" class="btn btn-primary">Nieuw toevoegen</a></p>
<table class="table table-striped">
<thead><tr><th>Titel</th><th>Foto's</th><th></th></tr></thead>
<tbody>
@foreach (var s in Model) {
<tr>
  <td>@s.Title</td>
  <td>@(s.Photos?.Count ?? 0)</td>
  <td>
    <a asp-action="Details" asp-route-id="@s.Id">Details</a> |
    <a asp-action="Edit" asp-route-id="@s.Id">Wijzig</a> |
    <a asp-action="Delete" asp-route-id="@s.Id">Verwijder</a>
  </td>
</tr>
}
</tbody>
</table>
